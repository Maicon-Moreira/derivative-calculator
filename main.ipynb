    "def derivative(fun, x):\n",
    "    change = 1e-6\n",
    "\n",
    "    y0 = fun(x - change)\n",
    "    y1 = fun(x + change)\n",
    "\n",
    "    return (y1 - y0)/change/2 if x >= 0 else -(y1 - y0)/change/2\n",
    "\n",
    "derivative(fun, -1)"
